# LIS Modern - Frontend Environment Configuration
# Copy this file to .env.local and fill in your actual values

# ===========================================
# GraphQL Backend Configuration
# ===========================================
NEXT_PUBLIC_GRAPHQL_URL=http://localhost:8080/graphql
NEXT_PUBLIC_GRAPHQL_WS_URL=ws://localhost:8080/graphql

# ===========================================
# Application Configuration
# ===========================================
NEXT_PUBLIC_APP_NAME=Laboratory Information System
NEXT_PUBLIC_LAB_NAME=Modern Clinical Laboratory
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# ABDM (Ayushman Bharat Digital Mission)
# ===========================================
# Documentation: https://abdm.gov.in/
NEXT_PUBLIC_ABDM_CLIENT_ID=your_abdm_client_id
NEXT_PUBLIC_ABDM_CLIENT_SECRET=your_abdm_client_secret
NEXT_PUBLIC_ABDM_BASE_URL=https://dev.abdm.gov.in
NEXT_PUBLIC_ABDM_ENV=sandbox # sandbox or production

# ===========================================
# Payment Gateway (Razorpay)
# ===========================================
# Documentation: https://razorpay.com/docs/
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxx
NEXT_PUBLIC_RAZORPAY_KEY_SECRET=your_razorpay_key_secret
NEXT_PUBLIC_RAZORPAY_WEBHOOK_SECRET=your_webhook_secret
NEXT_PUBLIC_RAZORPAY_ENV=test # test or live

# ===========================================
# Email Service Configuration
# ===========================================
NEXT_PUBLIC_EMAIL_PROVIDER=smtp # smtp, sendgrid, or ses
NEXT_PUBLIC_EMAIL_FROM_NAME=Laboratory Information System
NEXT_PUBLIC_EMAIL_FROM_EMAIL=noreply@lab.com

# SMTP Configuration (if using SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# SendGrid Configuration (if using SendGrid)
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxx

# AWS SES Configuration (if using SES)
AWS_SES_REGION=us-east-1
AWS_SES_ACCESS_KEY_ID=your_access_key_id
AWS_SES_SECRET_ACCESS_KEY=your_secret_access_key

# ===========================================
# SMS Service Configuration
# ===========================================
NEXT_PUBLIC_SMS_PROVIDER=msg91 # twilio, msg91, or sns

# Twilio Configuration (if using Twilio)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_FROM_NUMBER=+1234567890

# MSG91 Configuration (if using MSG91 - popular in India)
MSG91_AUTH_KEY=your_msg91_auth_key
MSG91_SENDER_ID=LABLIS
MSG91_ROUTE=4 # 1: Promotional, 4: Transactional

# AWS SNS Configuration (if using SNS)
AWS_SNS_REGION=us-east-1
AWS_SNS_ACCESS_KEY_ID=your_access_key_id
AWS_SNS_SECRET_ACCESS_KEY=your_secret_access_key

# ===========================================
# WhatsApp Business API Configuration
# ===========================================
NEXT_PUBLIC_WHATSAPP_PROVIDER=twilio # twilio or meta

# Twilio WhatsApp Configuration
TWILIO_WHATSAPP_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_WHATSAPP_AUTH_TOKEN=your_auth_token
TWILIO_WHATSAPP_FROM_NUMBER=whatsapp:+14155238886

# Meta WhatsApp Business Configuration
META_WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
META_WHATSAPP_ACCESS_TOKEN=your_access_token
META_WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id

# ===========================================
# Security & Authentication
# ===========================================
NEXTAUTH_SECRET=your_nextauth_secret_key_here
NEXTAUTH_URL=http://localhost:3000

# ===========================================
# File Storage
# ===========================================
# For storing reports, images, etc.
STORAGE_PROVIDER=local # local, s3, or cloudinary
AWS_S3_BUCKET=your_bucket_name
AWS_S3_REGION=us-east-1
AWS_S3_ACCESS_KEY_ID=your_access_key_id
AWS_S3_SECRET_ACCESS_KEY=your_secret_access_key

# ===========================================
# Analytics & Monitoring (Optional)
# ===========================================
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
SENTRY_DSN=your_sentry_dsn

# ===========================================
# Development & Debugging
# ===========================================
NODE_ENV=development # development or production
NEXT_PUBLIC_DEBUG=false
